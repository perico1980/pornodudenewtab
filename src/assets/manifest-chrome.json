{
	"manifest_version": 2,
	"name": "__MSG_extensionName__",
	"short_name": "Bonjourr",
	"version": "1.10",
	"description": "__MSG_extensionDesc__",
	"author": "Victor Azevedo and Tahoe Beetschen",
	"default_locale": "en",

	"icons": {
		"128": "src/assets/images/favicon-128x128.png",
		"512": "src/assets/images/favicon-512x512.png"
	},

	"chrome_url_overrides": {
		"newtab": "index.html"
	},

	"browser_action": {
		"title": "Bonjourr"
	},

	"offline_enabled": true,

	"background": {
		"persistent": false,
		"scripts": ["src/scripts/background.js"]
	},

	"permissions": ["storage", "unlimitedStorage", "geolocation"]
}
